<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" stylesheets="@HotelMain.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.hotel.view.HotelMainController">
   <left>
      <Pane prefHeight="768" prefWidth="247.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" layoutY="271" prefHeight="472.0" prefWidth="247.0">
               <children>
                  <HBox fx:id="hotelInfo" alignment="CENTER" onMouseClicked="#handleHotelInfo" prefHeight="100.0" prefWidth="121.0" styleClass="hbox">
                     <children>
                        <Label contentDisplay="CENTER" text="酒店信息" textAlignment="CENTER" />
                     </children>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="orderExecute" alignment="CENTER" onMouseClicked="#handleOrderExecute" prefHeight="100.0" prefWidth="121.0" styleClass="hbox">
                     <children>
                        <Label text="订单执行" textAlignment="CENTER" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="orderBrowse" alignment="CENTER" onMouseClicked="#handleOrderBrowse" prefHeight="100.0" prefWidth="121.0" styleClass="hbox">
                     <children>
                        <Label text="订单浏览" textAlignment="CENTER" />
                     </children>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="checkInLive" alignment="CENTER" onMouseClicked="#handleCheckInLive" prefHeight="100.0" prefWidth="121.0" styleClass="hbox">
                     <children>
                        <Label text="线下入住登记" textAlignment="CENTER" />
                     </children>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="checkOut" alignment="CENTER" onMouseClicked="#handleCheckOut" prefHeight="100.0" prefWidth="121.0" styleClass="hbox">
                     <children>
                        <Label text="客户退房" textAlignment="CENTER" />
                     </children>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="abnormalOrder" alignment="CENTER" onMouseClicked="#handleAbnormalOrder" prefHeight="100.0" prefWidth="121.0" styleClass="hbox">
                     <children>
                        <Label text="过期订单" textAlignment="CENTER" />
                     </children>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="hotelPromotion" alignment="CENTER" onMouseClicked="#handleHotelPromotion" prefHeight="100.0" prefWidth="121.0" styleClass="hbox">
                     <children>
                        <Label text="促销策略" textAlignment="CENTER" />
                     </children>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="-2.0" layoutY="31.0" prefHeight="231.0" prefWidth="223.0" spacing="20.0">
               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="196.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="107.0" prefWidth="100.0" styleClass="portrait-hbox" />
                     </children>
                  </HBox>
                  <Button fx:id="logout" mnemonicParsing="false" onAction="#handleLogout" styleClass="logout" text="注销" />
               </children>
            </VBox>
            <Label layoutX="5.0" layoutY="5.0" onMouseClicked="#handleCloseWindow" styleClass="close" text="X">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
         </children>
      </Pane>
   </left>
</BorderPane>
